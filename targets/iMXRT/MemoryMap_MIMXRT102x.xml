<!DOCTYPE Board_Memory_Definition_File>
<Root name="iMXRT" >
	<!-- The ROM expects the 512-byte FlexSPI NOR configuration parameters to be present at offset 0x0 in Serial NOR flash.
		Compare Chapter "9.6.1.2 FlexSPI Serial NOR Flash Boot Operation" in the reference manual of the iMXRT1021 / iMXRT1024  -->
	<MemorySegment name="BootOffset"  start="0x60000000" size="$(BootRomOffset:0x0)" access="ReadOnly"/>
	<MemorySegment name="FlexSPI"     start="0x60000000" size="$(FlexSPISIZE:0x04000000)" access="ReadOnly"/>
	<MemorySegment name="OCRAM"       start="0x20200000" size="$(OCRAMSIZE:0x00020000)"/>
	<MemorySegment name="DTCM"        start="0x20000000" size="$(DTCMSIZE:0x00010000)"/>
	<MemorySegment name="ITCM"        start="0x00000000" size="$(ITCMSIZE:0x00010000)"/>
	<MemorySegment name="SDRAM"       start="0x80000000" size="$(SDRAMSIZE:0x02000000)"/>
</Root>
